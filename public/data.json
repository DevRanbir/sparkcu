    {
      "name": "**Rules**",
      "children": [
        {
          "name": "**General Rules**",
          "children": [
            {
              "name": "Teams must strictly follow PPT Guidelines (**12 slides max**)",
              "sources": ["9"]
            },
            {
              "name": "No similar/repeated content between teams (**plagiarism leads to disqualification**)",
              "sources": ["9"]
            },
            {
              "name": "All team members must be CU BE CSE students (1st or 2nd year)",
              "sources": ["9"]
            },
            {
              "name": "One Team Leader must be appointed for communication",
              "sources": ["10"]
            }
          ]
        },
        {
          "name": "**AI Usage Rules**",
          "children": [
            {
              "name": "AI is allowed for idea generation & coding contest support",
              "sources": ["10"]
            },
            {
              "name": "**AI is NOT allowed for direct PPT creation** (e.g., Gamma, Canva premade templates, or similar well-known design platforms)",
              "sources": ["10"]
            },
            {
              "name": "Using prohibited AI tools for PPT creation = **direct disqualification**",
              "sources": ["10"]
            },
            {
              "name": "Teams must present in their own words; AI-generated text must be customized",
              "sources": ["10"]
            }
          ]
        },
        {
          "name": "**Coding Contest Rules**",
          "children": [
            {
              "name": "Participation earns +0.5 mark, Best in Category = +1, Best in at least 2 = +2",
              "sources": ["10"]
            },
            {
              "name": "Contest will be **time-limited** – fastest and most accurate teams secure top positions",
              "sources": ["10"]
            },
            {
              "name": "Use of AI is allowed in contest, but the faster team will be the winner",
              "sources": ["10"]
            }
          ]
        },
        {
          "name": "**PPT Presentation Rules**",
          "children": [
            {
              "name": "Strict adherence to **time limit (5–6 minutes)**",
              "sources": ["11"]
            },
            {
              "name": "Every team must give the floor to the Team Leader at least once",
              "sources": ["11"]
            },
            {
              "name": "Teams must be ready for **Q&A by judges**",
              "sources": ["11"]
            }
          ]
        },
        {
          "name": "**Behavioral Rules**",
          "children": [
            {
              "name": "Respect mentors, organizers, and other teams",
              "sources": ["11"]
            },
            {
              "name": "Any form of misconduct or unfair means will result in **disqualification**",
              "sources": ["11"]
            },
            {
              "name": "**Judges’ decision will be final and binding**",
              "sources": ["11"]
            }
          ]
        }
